#!/usr/bin/env -S perl -CS

use strict;
use warnings;

use FindBin '$RealBin';
use lib "$RealBin/../lib";

use Getopt::Long;

use App::LastFM::PickAnArtist;

my $lastfm;

if (@ARGV == 1) {
  $lastfm = App::LastFM::PickAnArtist->new(username => $ARGV[0]);
} else {
  my %opts;
  GetOptions(\%opts, 'user=s', 'min=i', 'max=i');

  $lastfm = App::LastFM::PickAnArtist->new(%opts);
}

$lastfm->run;
